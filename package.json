{
  "name": "ai-chatbot-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "format": "prettier --write \"**/*.{md,tsx,ts,json}\"",
    "format:check": "prettier --check \"**/*.{md,tsx,ts,json}\""
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.{md,tsx,ts,json}": [
      "prettier --write"
    ],
    "backend/**/*.py": [
      "bash -c 'file=\"$1\"; cd backend && uv sync --dev --quiet && uv run ruff format \"${file#backend/}\" && uv run ruff check --fix \"${file#backend/}\"' --"
    ]
  },
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd"
}
